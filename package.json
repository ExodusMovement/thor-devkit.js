{
  "name": "@exodus/thor-devkit",
  "version": "0.11.0-exodus4",
  "description": "Typescript library to aid DApp development on VeChain Thor",
  "main": "dist/index.js",
  "module": "es6/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "lint": "tslint -p .",
    "prepare": "rm -rf dist/ es6/; npm run build",
    "test": "tslint -p . && NODE_ENV=test mocha --require ts-node/register --timeout 20000 --recursive  './**/*.test.ts'",
    "cover": "NODE_ENV=test nyc npm t"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "tests/",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ExodusMovement/thor-devkit.js.git"
  },
  "keywords": [
    "vechain",
    "thor",
    "blockchain",
    "dapp",
    "tx",
    "transaction",
    "crypto",
    "mnemonic",
    "keystore",
    "abi"
  ],
  "author": "qianbin",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/vechain/thor-devkit.js/issues"
  },
  "homepage": "https://github.com/ExodusMovement/thor-devkit.js#readme",
  "devDependencies": {
    "@types/bip39": "^2.4.0",
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.1",
    "@types/node": "^10.5.2",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "ts-node": "^6.1.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "@vechain/ethers": "^4.0.27-2",
    "bignumber.js": "^8.1.1",
    "bip39": "^2.5.0",
    "blakejs": "^1.1.0",
    "fast-json-stable-stringify": "^2.0.0",
    "hdkey": "^1.0.0",
    "keccak": "^1.4.0",
    "lodash": "^4.17.11",
    "rlp": "^2.0.0",
    "secp256k1": "3.5.2"
  },
  "sideEffects": false
}
